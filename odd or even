#include<stdio.h>
int main()
{
    int arr[50],n,e_c=0,o_c=0,i;
	printf("Enter the number of elements: ");
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	scanf("%d",&arr[i]);
	for(i=0;i<n;i++)
	{
		if(arr[i]%2==0)
		e_c++;
		else
		o_c++;
	}
	printf("number of even number=%d\n",e_c);
	printf("number of odd number=%d",o_c);
return 0;
}
